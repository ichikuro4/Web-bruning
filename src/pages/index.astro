          dots[i].className = 'w-8 h-2 rounded-full transition-all duration-300 bg-colegio-yellow';
        } else {
          dots[i].className = 'w-2 h-2 rounded-full transition-all duration-300 bg-white/50';
        }
      }
    }
  }

  function goToSlide(index: number) {
    const itemsPerView = getItemWidth() === 100 ? 1 : getItemWidth() === 50 ? 2 : 3;
    const maxIndex = Math.max(0, totalItems - itemsPerView);
    currentIndex = Math.max(0, Math.min(index, maxIndex));
    updateCarousel();
    updateDots();
  }

  // Galer√≠as de fotos por festividad
  const galeriasData = {
    'aniversario': {
      title: 'Aniversario',
      photos: ['/Galeria/Prueba1.webp', '/Galeria/Prueba2.webp', '/Galeria/Prueba3.webp']
    },
    'dia-logro': {
      title: 'D√≠a del Logro',
      photos: ['/Galeria/Prueba2.webp', '/Galeria/Prueba3.webp', '/Galeria/Prueba4.webp']
    },
    'feria-ciencias': {
      title: 'Feria de Ciencias',
      photos: ['/Galeria/Prueba3.webp', '/Galeria/Prueba4.webp', '/Galeria/Prueba5.webp']
    },
    'graduacion': {
      title: 'Graduaci√≥n',
      photos: ['/Galeria/Prueba4.webp', '/Galeria/Prueba5.webp', '/Galeria/Prueba1.webp']
    },
    'dia-deporte': {
      title: 'D√≠a del Deporte',
      photos: ['/Galeria/Prueba5.webp', '/Galeria/Prueba1.webp', '/Galeria/Prueba2.webp']
    }
  };

  function getItemWidth() {
    const screenWidth = window.innerWidth;
    if (screenWidth >= 1024) return 33.333; // lg: 3 items
    if (screenWidth >= 768) return 50; // md: 2 items
    return 100; // mobile: 1 item
  }

  function updateCarousel() {
    const itemWidth = getItemWidth();
    carousel!.style.transform = `translateX(-${currentIndex * itemWidth}%)`;
  }

  prevBtn!.addEventListener('click', () => {
    const itemsPerView = getItemWidth() === 100 ? 1 : getItemWidth() === 50 ? 2 : 3;
    const maxIndex = Math.max(0, totalItems - itemsPerView);
    
    // Carrusel circular
    if (currentIndex === 0) {
      currentIndex = maxIndex;
    } else {
      currentIndex--;
    }
    
    updateCarousel();
    updateDots();
  });

  nextBtn!.addEventListener('click', () => {
    const itemsPerView = getItemWidth() === 100 ? 1 : getItemWidth() === 50 ? 2 : 3;
    const maxIndex = Math.max(0, totalItems - itemsPerView);
    
    // Carrusel circular
    if (currentIndex >= maxIndex) {
      currentIndex = 0;
    } else {
      currentIndex++;
    }
    
    updateCarousel();
    updateDots();
  });

  window.addEventListener('resize', updateCarousel);

  // Touch/Swipe support para m√≥vil
  let touchStartX = 0;
  let touchEndX = 0;

  carousel?.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  });

  carousel?.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  });

  function handleSwipe() {
    const itemsPerView = getItemWidth() === 100 ? 1 : getItemWidth() === 50 ? 2 : 3;
    const maxIndex = Math.max(0, totalItems - itemsPerView);
    
    if (touchStartX - touchEndX > 50) {
      // Swipe left - next (circular)
      if (currentIndex >= maxIndex) {
        currentIndex = 0;
      } else {
        currentIndex++;
      }
      updateCarousel();
      updateDots();
    }
    
    if (touchEndX - touchStartX > 50) {
      // Swipe right - prev (circular)
      if (currentIndex === 0) {
        currentIndex = maxIndex;
      } else {
        currentIndex--;
      }
      updateCarousel();
      updateDots();
    }
  }

  // Inicializar
  createDots();

  // Modal de galer√≠a
  const modal = document.getElementById('galeria-modal');
  const modalTitle = document.getElementById('modal-title');
  const modalGaleria = document.getElementById('modal-galeria');
  const closeModal = document.getElementById('close-modal');

  document.querySelectorAll('[data-festividad]').forEach(item => {
    item.addEventListener('click', () => {
      const festividad = item.getAttribute('data-festividad');
      const data = galeriasData[festividad as keyof typeof galeriasData];
      
      if (data) {
        modalTitle!.textContent = data.title;
        modalGaleria!.innerHTML = data.photos.map(photo => `
          <div class="aspect-square overflow-hidden rounded-xl">
            <img src="${photo}" alt="${data.title}" class="w-full h-full object-cover hover:scale-110 transition-transform duration-500 cursor-pointer" />
          </div>
        `).join('');
        modal!.classList.remove('hidden');
        modal!.classList.add('flex');
      }
    });
  });

  closeModal!.addEventListener('click', () => {
    modal!.classList.add('hidden');
    modal!.classList.remove('flex');
  });

  modal!.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal!.classList.add('hidden');
      modal!.classList.remove('flex');
    }
  });

  // Carrusel de Testimonios
  const testimoniosCarousel = document.getElementById('testimonios-carousel');
  const prevTestimonio = document.getElementById('prev-testimonio');
  const nextTestimonio = document.getElementById('next-testimonio');
  const testimonioDots = document.querySelectorAll('.testimonio-dot');
  let currentTestimonioIndex = 0;
  const totalTestimonios = 2;

  function updateTestimonioCarousel() {
    if (testimoniosCarousel) {
      testimoniosCarousel.style.transform = `translateX(-${currentTestimonioIndex * 100}%)`;
      
      // Actualizar dots
      testimonioDots.forEach((dot, index) => {
        if (index === currentTestimonioIndex) {
          dot.classList.remove('bg-white/30');
          dot.classList.add('bg-colegio-yellow');
        } else {
          dot.classList.remove('bg-colegio-yellow');
          dot.classList.add('bg-white/30');
        }
      });
    }
  }

  prevTestimonio?.addEventListener('click', () => {
    currentTestimonioIndex = (currentTestimonioIndex - 1 + totalTestimonios) % totalTestimonios;
    updateTestimonioCarousel();
  });

  nextTestimonio?.addEventListener('click', () => {
    currentTestimonioIndex = (currentTestimonioIndex + 1) % totalTestimonios;
    updateTestimonioCarousel();
  });

  testimonioDots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      currentTestimonioIndex = index;
      updateTestimonioCarousel();
    });
  });
</script>