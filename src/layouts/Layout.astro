---
import '../styles/global.css'
import Navbar from '../components/Navbar.astro';
import Sidebar from '../components/Sidebar.astro';
import WhatsAppFloat from '../components/WhatsAppFloat.astro';
import Footer from '../components/Footer.astro';
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
}

const {
	title,
	description = 'Brüning School – Educación de excelencia en Trujillo, Perú. Formamos líderes con valores, visión global y certificaciones internacionales.',
	ogImage = '/PORTADA.webp',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(ogImage, Astro.site);
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- SEO -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph -->
		<meta property="og:type" content="website" />
		<meta property="og:locale" content="es_PE" />
		<meta property="og:site_name" content="Brüning School" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImageURL} />
		<meta property="og:url" content={canonicalURL} />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImageURL} />

		<!-- JSON-LD: Datos estructurados del colegio -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "School",
			"name": "Brüning School",
			"alternateName": "Bruning School",
			"url": "https://bruningschool.edu.pe",
			"logo": "https://bruningschool.edu.pe/LOGO BLANCO.webp",
			"image": "https://bruningschool.edu.pe/PORTADA.webp",
			"description": "Institución educativa privada de excelencia en Trujillo, Perú. Niveles Primaria y Secundaria con certificaciones Cambridge e IBEC.",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "Av. Chan Chan N° 100 - Villa del Mar",
				"addressLocality": "Trujillo",
				"addressRegion": "La Libertad",
				"addressCountry": "PE"
			},
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+51-999-928-258",
				"contactType": "admissions",
				"email": "informes@bruningschool.edu.pe",
				"availableLanguage": "Spanish"
			},
			"sameAs": [
				"https://www.facebook.com/BruningSchoolOficial",
				"https://www.instagram.com/bruningschool",
				"https://www.tiktok.com/@bruningschool"
			]
		}
		</script>
	</head>
	<body class="antialiased">
		<Navbar />
		<Sidebar />
		<WhatsAppFloat />
		
		<main class="min-h-screen">
			<slot />
		</main>

		<Footer />
	</body>

	<script>
		// Observer global para animaciones fade-in-section en todas las páginas
		function initFadeIn() {
			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) entry.target.classList.add('visible');
				});
			}, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

			document.querySelectorAll('.fade-in-section').forEach(el => observer.observe(el));
		}

		// Ejecutar en carga inicial y en cada navegación con View Transitions
		initFadeIn();
		document.addEventListener('astro:page-load', initFadeIn);
	</script>
</html>