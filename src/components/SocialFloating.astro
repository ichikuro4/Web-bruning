<style>
  .social-tooltip::after {
    content: '';
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    border: 6px solid transparent;
    border-left-color: #111827;
  }

  /* Animaci√≥n de entrada */
  .social-float-btn {
    animation: slideInRight 0.5s ease-out forwards;
    opacity: 0;
  }

  .social-float-btn:nth-child(1) { animation-delay: 0.1s; }
  .social-float-btn:nth-child(2) { animation-delay: 0.2s; }
  .social-float-btn:nth-child(3) { animation-delay: 0.3s; }

  @keyframes slideInRight {
    from {
      transform: translateX(100px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Ocultar en scroll hacia abajo (opcional) */
  .social-float-btn.hide {
    transform: translateX(100px);
    opacity: 0;
  }
</style>

