<section class="py-24 bg-[#EDEDF6] relative overflow-hidden">
  <div class="absolute top-0 right-0 w-96 h-96 bg-colegio-blue/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-colegio-yellow/5 rounded-full blur-3xl"></div>

  <div class="max-w-6xl mx-auto px-4 relative z-10">
    <div class="text-center mb-16 fade-in-section">
      <span class="text-colegio-yellow font-bold text-sm tracking-wider uppercase mb-2 block">Momentos Especiales</span>
      <h2 class="text-4xl md:text-5xl font-black text-colegio-blue mb-4">Galería de Fotos</h2>
      <div class="w-24 h-1.5 bg-gradient-to-r from-transparent via-colegio-yellow to-transparent mx-auto"></div>
      <p class="mt-6 text-gray-700 text-lg max-w-2xl mx-auto">
        Revive los momentos más importantes de nuestra comunidad educativa.
      </p>
    </div>

    <div class="flex flex-wrap justify-center gap-3 mb-12 fade-in-section">
      <button class="galeria-btn active bg-colegio-yellow text-colegio-blue font-bold py-3 px-6 rounded-full shadow-lg transition-all duration-300 transform hover:scale-105" data-categoria="aniversario">Aniversario</button>
      <button class="galeria-btn bg-white hover:bg-colegio-yellow text-colegio-blue font-bold py-3 px-6 rounded-full shadow-lg transition-all duration-300 transform hover:scale-105" data-categoria="dia-madre">Día de la Madre</button>
      <button class="galeria-btn bg-white hover:bg-colegio-yellow text-colegio-blue font-bold py-3 px-6 rounded-full shadow-lg transition-all duration-300 transform hover:scale-105" data-categoria="dia-padre">Día del Padre</button>
      <button class="galeria-btn bg-white hover:bg-colegio-yellow text-colegio-blue font-bold py-3 px-6 rounded-full shadow-lg transition-all duration-300 transform hover:scale-105" data-categoria="dia-nino">Día del Niño</button>
      <button class="galeria-btn bg-white hover:bg-colegio-yellow text-colegio-blue font-bold py-3 px-6 rounded-full shadow-lg transition-all duration-300 transform hover:scale-105" data-categoria="olimpiadas">Olimpiadas</button>
    </div>

    <div id="galeria-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 fade-in-section"></div>
  </div>
</section>

<!-- Modal -->
<div id="imagen-modal" class="fixed inset-0 bg-black/90 backdrop-blur-md z-[200] hidden items-center justify-center p-4 opacity-0 transition-opacity duration-300">
  <button id="modal-close" class="absolute top-4 right-4 z-10 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white p-3 rounded-full transition-all duration-300 hover:scale-110 border border-white/20">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
  </button>
  <button id="modal-prev" class="absolute left-4 z-10 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white p-4 rounded-full transition-all duration-300 hover:scale-110 border border-white/20">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
  </button>
  <button id="modal-next" class="absolute right-4 z-10 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white p-4 rounded-full transition-all duration-300 hover:scale-110 border border-white/20">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
  </button>
  <div id="modal-image-container" class="max-w-6xl max-h-[90vh] flex items-center justify-center transform scale-95 transition-transform duration-300">
    <img id="modal-image" src="" alt="" class="max-w-full max-h-[90vh] object-contain rounded-2xl shadow-2xl" />
  </div>
  <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 bg-white/10 backdrop-blur-sm text-white px-6 py-3 rounded-full font-bold border border-white/20">
    <span id="modal-counter">1 / 6</span>
  </div>
</div>

<style>
  @keyframes slideInUp {
    from { opacity: 0; transform: translateY(20px); }
    to   { opacity: 1; transform: translateY(0); }
  }
  #galeria-grid { transition: opacity 0.15s ease-out, transform 0.15s ease-out; }
  .galeria-item { opacity: 0; animation: slideInUp 0.3s ease-out forwards; }
</style>

<script>
  const galeriasData: Record<string, { title: string; photos: string[] }> = {
    'aniversario': { title: 'Aniversario', photos: [1,2,3,4,5,6].map(n => `/Galeria/ANIVERSARIO/${n}.jpeg`) },
    'dia-madre':   { title: 'Día de la Madre', photos: [1,2,3,4,5,6].map(n => `/Galeria/DÍA DE LA MADRE/${n}.jpg`) },
    'dia-padre':   { title: 'Día del Padre', photos: [1,2,3,4,5,6].map(n => `/Galeria/DÍA DEL PADRE/${n}.jpg`) },
    'dia-nino':    { title: 'Día del Niño', photos: [1,2,3,4,5,6].map(n => `/Galeria/DÍA DEL NIÑO/${n}.jpg`) },
    'olimpiadas':  { title: 'Olimpiadas', photos: [1,2,3,4,5,6].map(n => `/Galeria/OLIMPIADAS/${n}.jpg`) },
  };

  const grid    = document.getElementById('galeria-grid');
  const botones = document.querySelectorAll('.galeria-btn');
  let currentPhotos: string[] = [];
  let currentPhotoIndex = 0;

  function mostrarFotos(categoria: string) {
    const data = galeriasData[categoria];
    if (!data || !grid) return;
    currentPhotos = data.photos;

    grid.style.opacity = '0';
    grid.style.transform = 'scale(0.98)';

    setTimeout(() => {
      grid.innerHTML = data.photos.map((photo, i) => `
        <div class="galeria-item group cursor-pointer overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2" style="animation-delay:${i * 0.05}s" data-photo-index="${i}">
          <div class="relative aspect-square">
            <img src="${photo}" alt="${data.title}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300" loading="lazy" />
          </div>
        </div>
      `).join('');

      grid.querySelectorAll('.galeria-item').forEach(item => {
        item.addEventListener('click', () => abrirModal(parseInt(item.getAttribute('data-photo-index') || '0')));
      });

      requestAnimationFrame(() => { grid.style.opacity = '1'; grid.style.transform = 'scale(1)'; });
    }, 150);
  }

  // Modal
  const modal     = document.getElementById('imagen-modal');
  const modalImg  = document.getElementById('modal-image') as HTMLImageElement;
  const counter   = document.getElementById('modal-counter');
  const container = document.getElementById('modal-image-container');

  function actualizarModal() {
    if (modalImg) modalImg.src = currentPhotos[currentPhotoIndex];
    if (counter)  counter.textContent = `${currentPhotoIndex + 1} / ${currentPhotos.length}`;
  }

  function abrirModal(idx: number) {
    currentPhotoIndex = idx;
    actualizarModal();
    if (modal && container) {
      modal.classList.remove('hidden'); modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
      requestAnimationFrame(() => { modal.style.opacity = '1'; container.style.transform = 'scale(1)'; });
    }
  }

  function cerrarModal() {
    if (modal && container) {
      modal.style.opacity = '0'; container.style.transform = 'scale(0.95)';
      setTimeout(() => { modal.classList.add('hidden'); modal.classList.remove('flex'); document.body.style.overflow = ''; }, 300);
    }
  }

  function navModal(dir: number) {
    currentPhotoIndex = (currentPhotoIndex + dir + currentPhotos.length) % currentPhotos.length;
    actualizarModal();
  }

  document.getElementById('modal-close')?.addEventListener('click', cerrarModal);
  document.getElementById('modal-prev')?.addEventListener('click', () => navModal(-1));
  document.getElementById('modal-next')?.addEventListener('click', () => navModal(1));
  modal?.addEventListener('click', e => { if (e.target === modal) cerrarModal(); });
  document.addEventListener('keydown', e => {
    if (modal?.classList.contains('hidden')) return;
    if (e.key === 'Escape') cerrarModal();
    else if (e.key === 'ArrowLeft')  navModal(-1);
    else if (e.key === 'ArrowRight') navModal(1);
  });

  botones.forEach(btn => {
    btn.addEventListener('click', () => {
      botones.forEach(b => { b.classList.remove('active', 'bg-colegio-yellow'); b.classList.add('bg-white'); });
      btn.classList.add('active', 'bg-colegio-yellow'); btn.classList.remove('bg-white');
      const cat = btn.getAttribute('data-categoria');
      if (cat) mostrarFotos(cat);
    });
  });

  mostrarFotos('aniversario');
</script>
